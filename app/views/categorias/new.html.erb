<div class="conteudo">
  <div class="conteudo_titulo">
    <h1>Cadastrar Nova Categoria</h1>
  </div>
  <hr/>  
  <div class="conteudo_infos mx-auto" style="width: 300px;">
    <%= form_for @categoria, url: categorias_create_path do |form| %>
      <div class="mb-3">
        <%= form.label :nome, class: "form-label" %>
        <%= form.text_field :nome, class: "form-control" %>
      </div>
      <div class="mt-3">
        <%= form.submit 'Salvar', class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>  
</div>     
