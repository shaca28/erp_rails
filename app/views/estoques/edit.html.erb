<div class="conteudo_titulo">  
    <h1>Editar quantidade minima e máxima</h1>
</div>
<hr/>
<br>
<div class="conteudo_infos mx-auto" style="width: 300px;">

    <%= form_with(model: @estoque, local: true) do |form| %>
        <h2><%= @estoque.fritadeira.cod_interno %> - <%= @estoque.fritadeira.voltagem %></h2>
        <hr/>

        <div class="mb-3">
            <%= form.label :q_min, 'Quantidade Minima', class: "form-label" %>
            <%= form.text_field :q_min, class: "form-control" %>
        </div>

        <div class="mb-3">
            <%= form.label :q_max, 'Quantidade máxima', class: "form-label" %>
            <%= form.text_field :q_max, class: "form-control" %>
        </div>

        <div class="mt-3">
            <%= form.submit 'Salvar', class: "btn btn-primary" %>
            <%= link_to 'Voltar', estoques_path, class: "btn btn-danger" %>
            
        </div>

    

    <% end %> 
</div>     