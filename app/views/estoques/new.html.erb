<div class="conteudo_titulo">  
    <h1>Adicionar Produto ao estoque</h1>
</div>
<hr/>
<br>    
<div class="conteudo_infos mx-auto" style="width: 300px;">
    <%= form_with(model: @estoque, local: true) do |form| %>
        <% if @estoque.errors.any? %>
            <div id="error_explanation">
                <h2><%= pluralize(@estoque.errors.count, "erro") %> ocorreu ao salvar a categoria:</h2>
                <ul>
                <% @estoque.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
                </ul>
            </div>
        <% end %>
        <div class="mb-3">
            <%= form.label :fritadeira_id, "Fritadeira", class: "form-label" %>
            <select class="form-select" aria-label="Selecione uma fritadeira" name="estoque[fritadeira_id]">
                <% @fritadeiras.each do |fritadeira| %>
                <% fritadeira_label = "#{fritadeira.cod_interno} - #{fritadeira.voltagem}" %>    
                <% if fritadeira.id == 1 %>
                    <option value="<%= fritadeira.id %>" selected><%= fritadeira_label %></option>
                <% else %>
                    <option value="<%= fritadeira.id %>"><%= fritadeira_label %></option>
                <% end %>    
                <% end %>
            </select>
        </div>


        <div class="mb-3">
            <%= form.label :q_atual, "Quantidade Atual", class: "form-label" %>
            <%= form.number_field :q_atual, class: "form-control" %>
        </div>
        <div class="mb-3">
            <%= form.label :q_min, "Quantidade Minima", class: "form-label" %>
            <%= form.number_field :q_min, class: "form-control" %>
        </div>
        <div class="mb-3">
            <%= form.label :q_max, "Quantidade Maxima", class: "form-label" %>
            <%= form.number_field :q_max, class: "form-control" %>
        </div>

        <div class="mt-3">
            <%= form.submit 'Salvar', class: "btn btn-primary" %>
            <%= link_to 'Voltar', estoques_path, class: "btn btn-danger" %>
        </div>
        

        
    <% end %>
    
</div>